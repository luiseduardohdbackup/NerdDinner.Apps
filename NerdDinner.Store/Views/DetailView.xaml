<views:MvxStorePage
    x:Class="NerdDinner.Store.Views.DetailView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:NerdDinner.Store.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:views="using:Cirrious.MvvmCross.WindowsStore.Views"
    mc:Ignorable="d">

    <Grid Background="{StaticResource ApplicationPageBackgroundThemeBrush}">
        <StackPanel>
            <TextBlock 
                x:Name="Title" FontSize="24" 
                Text="{Binding Item.Title}" Margin="5,3,3,0" TextWrapping="Wrap" />
            <TextBlock 
                x:Name="Description" FontSize="24" 
                Text="{Binding Item.Description}" Margin="5,3,3,0" TextWrapping="Wrap" />
            <TextBlock 
                x:Name="EventDate" FontSize="24" 
                Text="{Binding Item.EventDate}" Margin="5,3,3,0" TextWrapping="Wrap" />
            <TextBlock 
                x:Name="HostedBy" FontSize="24" 
                Text="{Binding Item.HostedBy}" Margin="5,3,3,0" TextWrapping="Wrap" />
        </StackPanel>
    </Grid>
</views:MvxStorePage>
